<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageView" parents="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/light_gray</item>
    </style>
    <style name="CustomSpinnerPopup" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:popupBackground">@drawable/rounded_dropdown</item>
    </style>
    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="CustomDialogItemStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Stil za dugmadi u AlertDialog -->
    <style name="CustomDialogButtonStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#F0F0F0</item>
    </style>

    <style name="roundedTopCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>