<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageView" parents="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/light_gray</item>
    </style>
    <style name="CustomSpinnerPopup" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:popupBackground">@drawable/rounded_dropdown</item>
    </style>
    <style name="RoundedAlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/black</item>

        <item name="colorAccent">@color/black</item>

        <item name="background">@drawable/dialog_background</item>
        <item name="android:background">@drawable/dialog_background</item>
        <item name="colorControlHighlight">@color/dark_gray</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorAlertDialogListItem">@color/dark_gray</item>

        <item name="buttonBarButtonStyle">@style/CustomDialogButtonStyle</item>
    </style>

    <style name="CustomDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearanceOverlay">@style/ButtonCornerShape</item>
    </style>

    <style name="ButtonCornerShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <style name="CustomDialogItemStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="roundedTopCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>