<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Naslov za popularne događaje -->
        <TextView
            android:id="@+id/popular_events_title"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/events"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <!-- Horizontal ScrollView za slike događaja -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Kartica 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="1dp"
                            android:contentDescription="@string/event_1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/event1"
                            app:shapeAppearanceOverlay="@style/roundedImageView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="8dp"
                            android:text="@string/event_1"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="110dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/rounded_button"
                            android:text="@string/view_details_buttton"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="11sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <!-- Slika 2 sa nazivom i dugmetom -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="1dp"
                            android:contentDescription="@string/event_2"
                            android:scaleType="centerCrop"
                            android:src="@drawable/event2"
                            app:shapeAppearanceOverlay="@style/roundedImageView" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/event_2"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:paddingTop="8dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="110dp"
                            android:layout_height="48dp"
                            android:text="@string/view_details_buttton"
                            android:textSize="11sp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/rounded_button"
                            android:textColor="@android:color/white"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Kartica 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <!-- Slika 3 sa nazivom i dugmetom -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="1dp"
                            android:contentDescription="@string/event_3"
                            android:scaleType="centerCrop"
                            android:src="@drawable/event3"
                            app:shapeAppearanceOverlay="@style/roundedImageView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/event_3"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:paddingTop="8dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="110dp"
                            android:layout_height="48dp"
                            android:text="@string/view_details_buttton"
                            android:textSize="11sp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/rounded_button"
                            android:textColor="@android:color/white"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Kartica 4 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <!-- Slika 4 sa nazivom i dugmetom -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="1dp"
                            android:contentDescription="@string/event_4"
                            android:scaleType="centerCrop"
                            android:src="@drawable/event4"
                            app:shapeAppearanceOverlay="@style/roundedImageView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/event_4"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:paddingTop="8dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="110dp"
                            android:layout_height="48dp"
                            android:text="@string/view_details_buttton"
                            android:textSize="11sp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/rounded_button"
                            android:textColor="@android:color/white"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Kartica 5 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">
                    <!-- Slika 5 sa nazivom i dugmetom -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="1dp"
                            android:contentDescription="@string/event_5"
                            android:scaleType="centerCrop"
                            android:src="@drawable/event5"
                            app:shapeAppearanceOverlay="@style/roundedImageView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/event_5"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:paddingTop="8dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="110dp"
                            android:layout_height="48dp"
                            android:text="@string/view_details_buttton"
                            android:textSize="11sp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/rounded_button"
                            android:textColor="@android:color/white"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- RecyclerView za prikazivanje sadržaja -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</ScrollView>
