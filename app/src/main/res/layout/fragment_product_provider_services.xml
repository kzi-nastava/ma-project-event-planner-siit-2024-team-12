    <!-- Horizontal ScrollView za slike događaja -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Kartica 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:contentDescription="@string/service_1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/service1"
                        app:shapeAppearanceOverlay="@style/roundedImageView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="@string/service_1"
                        android:textSize="14sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/service_edit"
                        android:layout_width="110dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/rounded_button"
                        android:text="@string/view_details_buttton"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="11sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <!-- Slika 2 sa nazivom i dugmetom -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:contentDescription="@string/service_2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/service2"
                        app:shapeAppearanceOverlay="@style/roundedImageView" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_2"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingTop="8dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="110dp"
                        android:layout_height="48dp"
                        android:text="@string/view_details_buttton"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/rounded_button"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kartica 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <!-- Slika 3 sa nazivom i dugmetom -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:contentDescription="@string/service_3"
                        android:scaleType="centerCrop"
                        android:src="@drawable/service3"
                        app:shapeAppearanceOverlay="@style/roundedImageView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_3"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingTop="8dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="110dp"
                        android:layout_height="48dp"
                        android:text="@string/view_details_buttton"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/rounded_button"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kartica 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <!-- Slika 4 sa nazivom i dugmetom -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:contentDescription="@string/service_4"
                        android:scaleType="centerCrop"
                        android:src="@drawable/service4"
                        app:shapeAppearanceOverlay="@style/roundedImageView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_4"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingTop="8dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="110dp"
                        android:layout_height="48dp"
                        android:text="@string/view_details_buttton"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/rounded_button"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kartica 5 -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                <!-- Slika 5 sa nazivom i dugmetom -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:contentDescription="@string/service_5"
                        android:scaleType="centerCrop"
                        android:src="@drawable/service5"
                        app:shapeAppearanceOverlay="@style/roundedImageView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_5"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingTop="8dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="110dp"
                        android:layout_height="48dp"
                        android:text="@string/view_details_buttton"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/rounded_button"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Fragment za filter -->
    <FrameLayout
        android:id="@+id/service_filter_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <!-- RecyclerView za prikazivanje sadržaja -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>

