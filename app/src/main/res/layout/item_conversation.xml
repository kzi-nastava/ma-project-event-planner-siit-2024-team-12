<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp"
    android:layout_marginTop="1dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:foreground="?attr/selectableItemBackground">
    <LinearLayout
        android:id="@+id/conversation_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
            android:paddingEnd="16dp"
        android:paddingVertical="16dp"
            android:gravity="center_vertical"
        android:background="@color/white">
        <ImageView
            android:id="@+id/conversation_profile_image"
            android:layout_width="48dp"   android:layout_height="48dp"
            android:src="@drawable/user_logo"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="8dp"> <TextView
        android:id="@+id/conversation_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"/>

        <TextView
            android:id="@+id/conversation_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_message"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="13sp"
            android:textColor="@color/dark_gray"/>

    </LinearLayout>

    <TextView
        android:id="@+id/conversation_last_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20:00"
        android:textSize="12sp"
        android:textColor="@color/dark_gray"
        android:layout_gravity="top"
        android:layout_marginTop="4dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_gravity="bottom"/>

</androidx.cardview.widget.CardView>