<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="@string/filters"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- City filter -->
    <include layout="@layout/item_filter_row" android:id="@+id/cityFilter"/>

    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="@android:color/darker_gray" android:layout_marginVertical="8dp"/>

    <!-- Event type filter -->
    <include layout="@layout/item_filter_row" android:id="@+id/eventTypeFilter"/>

    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="@android:color/darker_gray" android:layout_marginVertical="8dp"/>

    <!-- Rating label + spinner -->
    <TextView
        android:id="@+id/ratingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:drawableStart="@drawable/ic_rating"
        android:drawablePadding="8dp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"/>

    <Spinner
        android:id="@+id/ratingSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"/>

    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="@android:color/darker_gray" android:layout_marginVertical="8dp"/>

    <!-- Sort label + spinners -->
    <TextView
        android:id="@+id/sortLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by"
        android:drawableStart="@drawable/ic_sort"
        android:drawablePadding="8dp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"/>

    <Spinner
        android:id="@+id/sortSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"/>

    <Spinner
        android:id="@+id/sortDirSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginTop="6dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="@android:color/darker_gray" android:layout_marginVertical="8dp"/>

    <!-- Date filter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/calendar_today"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/startDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/start_date"
            android:paddingStart="12dp"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/endDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/end_date"
            android:paddingStart="12dp"
            android:layout_marginStart="26dp"
            android:padding="12dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/filterBtn"
        android:text="@string/apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/form_button"
        android:textColor="@color/white"/>
</LinearLayout>
