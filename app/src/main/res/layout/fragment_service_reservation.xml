<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Service Reservation Details"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp" />

            <!-- Event -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@android:color/black"
                android:paddingBottom="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Service -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@android:color/black"
                android:paddingBottom="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Reservation made on -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation made on"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textReservationMadeOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Cancellation Deadline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancellation Deadline"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textCancellationDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Final Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final Amount"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textFinalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Time From -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time From"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textTimeFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Time To -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time To"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textTimeTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Cancel Button -->
            <Button
                android:id="@+id/buttonCancelReservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Cancel Reservation"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>

    <!-- Exit button fixed top-right -->
    <ImageView
        android:id="@+id/exitFormButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end|top"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/close"
        android:src="@drawable/exit_form" />
</FrameLayout>
