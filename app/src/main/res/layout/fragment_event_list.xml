<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/allEventsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/all_events"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="start"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        android:letterSpacing="0.05"/>

    <!-- Search bar -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/search_bar_background"
        android:queryHint="Search events"
        android:padding="8dp"/>

    <!-- Filter button + Reset button row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="8dp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/filters"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_filter"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"/>

        <!-- Reset filters button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/resetFiltersButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textAllCaps="false"
            android:text="@string/reset_filters"
            android:textColor="@color/black"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_delete"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/black"
            android:backgroundTint="@android:color/white"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/toggleButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="start">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/onlyFromMyCityButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/only_from_my_city"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:cornerRadius="20dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:backgroundTint="@android:color/white"
            app:icon="@drawable/ic_location"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/black"/>




    </LinearLayout>


    <!-- ChipGroup for active filters -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:singleLine="false"
        android:scrollbars="horizontal"/>

    <!-- RecyclerView for events -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"/>

    <!-- Pagination controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <!-- Previous arrow -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/prevPageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:contentDescription="@string/previous"
            android:src="@drawable/ic_chevron_left"
            android:tint="@color/black"/>

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>

        <!-- Page indicators -->
        <LinearLayout
            android:id="@+id/paginationIndicators"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>

        <!-- Next arrow -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nextPageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:contentDescription="@string/next"
            android:src="@drawable/ic_chevron_right"
            android:tint="@color/black"/>
    </LinearLayout>

</LinearLayout>
