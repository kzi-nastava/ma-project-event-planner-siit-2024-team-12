<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:layout_marginTop="32dp">

    <!-- Horizontalni LinearLayout za Filters dugme i Sort spinner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">


        <!-- Dugme za otvaranje filtera -->
        <Button
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filters"
            android:layout_gravity="start"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:padding="12dp"
            android:backgroundTint="@android:color/black"
            android:background="@drawable/rounded_button"/>

        <!-- Spinner za sortiranje sa opcijama -->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sortSpinner"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:entries="@array/sort_options"
            android:popupBackground="@drawable/rounded_dropdown"
            android:layout_marginEnd="0dp"
            android:padding="4dp"/>

    </LinearLayout>


    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/category_options"
        android:visibility="gone"
        android:popupBackground="@drawable/rounded_dropdown"
        android:layout_marginTop="8dp" />

    <!-- ChipGroup za izabrane filtere -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">
        <!-- Filter chipovi će biti dinamički dodani na osnovu odabranih kategorija -->
    </com.google.android.material.chip.ChipGroup>

    <!-- Dugme za resetovanje filtera -->
    <Button
        android:id="@+id/resetFiltersButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/reset_filters"
        android:textAllCaps="false"
        android:layout_gravity="start"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:padding="8dp"/>
</LinearLayout>
